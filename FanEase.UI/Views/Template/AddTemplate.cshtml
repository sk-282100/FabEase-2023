        <!-- Additional JavaScript and scripts -->
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                const formContainer = document.getElementById("form-container");
                const contentForm = document.getElementById("content-form");
                const doneBtn = document.getElementById("done-btn");

                // Function to handle the content type selection for each block
                function handleContentTypeSelect() {
                    const selectedBlock = this.id; // e.g., "block-1"
                    const contentOptionsContainer = this.nextElementSibling; // The div for content options

                    contentOptionsContainer.innerHTML = ""; // Clear previous options

                    if (this.value !== "none") {
                        // Show content options based on the selected content type
                        const contentOptions = document.createElement("div");
                        contentOptions.className = "content-options";

                        if (this.value === "text") {
                            // No additional options needed for text content
                        const textInput = document.createElement("input");
                        textInput.type = "textarea";
                        textInput.className = "form-control";
                        textInput.placeholder="Description/Text Content";
                        
                        contentOptions.appendChild(textInput);
                           // contentOptions.innerHTML = "Text content options here";
                        } else if (this.value === "image") {
                            // Show file upload option for image content
                            const fileInput = document.createElement("input");
                            fileInput.type = "file";
                            fileInput.accept = "image/*";
                        fileInput.className = "form-control";
                            contentOptions.appendChild(fileInput);
                        } else if (this.value === "video") {
                            // Show file upload option for video content
                            const fileInput = document.createElement("input");
                            fileInput.type = "file";
                            fileInput.accept = "video/*";
                        fileInput.className = "form-control";
                            contentOptions.appendChild(fileInput);
                        }

                        contentOptionsContainer.appendChild(contentOptions);
                    }
                }

                // Add event listeners for all content type selects
                const contentTypeSelects = contentForm.getElementsByClassName("content-type");
                Array.from(contentTypeSelects).forEach(select => {
                    select.addEventListener("change", handleContentTypeSelect);
                });

                // Done button event listener (implement the action you want to take on finishing the template)
                doneBtn.addEventListener("click", () => {
                    // Implement the action to take when the template is done (e.g., saving the data)
                    alert("Template editing complete!");
                });
            });
        </script>

