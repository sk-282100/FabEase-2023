            var button2 = document.getElementById("template2button");
            var button3 = document.getElementById("template3button");
            var section6 = document.getElementById("section-6");
            var section7 = document.getElementById("section-7");
            var section8 = document.getElementById("section-8");
            if (button2.innerHTML != "Selected") {
                button2.innerHTML = "Selected";
                button2.disabled = false;
                button1.disabled = true;
                button3.disabled = true;
                section6.disabled = true;
                section7.disabled = true;
                section8.disabled = true;
                type.value = "Template2";
                type.innerHTML = "Template2";
            }
            else {
                button2.innerHTML = "Choose Template 2";
                button1.disabled = false;
                button3.disabled = false;
                section6.disabled = false;
                section7.disabled = false;
                section8.disabled = false;
                type.value = "";

            }

        }

        function changebutton3() {

            var button1 = document.getElementById("template1button");
