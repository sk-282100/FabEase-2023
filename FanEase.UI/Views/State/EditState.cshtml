@model FanEase.UI.Models.State.StateVm

@{
    ViewData["Title"] = "EditState";
    Layout = "AdminLayout";
}

<body class="body-bg-f8faff">
    <div class="contact-list-area">
        <div class="container-fluid">
            <div class="table-responsive" data-simplebar>
                <div class="others-title">
                    <h3>Edit State</h3>
                </div>
                <div class="row">
    <div class="col-md-4">
            <form asp-action="EditStatePost" asp-controller="State" method="post" runat="server" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group hidden">
                <label asp-for="StateId" class="control-label"></label>
                <input asp-for="StateId" class="form-control" />
                <span asp-validation-for="StateId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StateName" class="control-label"></label>
                <input asp-for="StateName" class="form-control" />
                <span asp-validation-for="StateName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CountryId" class="control-label"></label>
                <select asp-for="CountryId" class="form-control" />
                                <option value="">--Select Country--</option>
                                @foreach (var country in @ViewBag.CountryList)
                                {
                                    <option value="@country.CountryId">@country.CountryName</option>
                                }
      
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <button type="button" class="btn btn-warning" onclick="location.href='@Url.Action("StateList","State",new{StateId=Model.StateId})'">Back To List</button>
            </div>
        </form>
        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
    </div>
</div>
</div>
</div>
</div>
</body>

