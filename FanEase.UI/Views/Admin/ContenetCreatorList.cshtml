            </td>
            <td>
                 <div class="btn-group" role="group" aria-label="Basic example">
                     <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("CreatorDetails","Admin",new{creatorId=item.UserId})'">Details</button>
                     <button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("EditCreator","Admin",new{creatorId=item.UserId})'">Edit</button>
                     <button type="button" class="btn btn-danger" onclick="confirmRemove('@item.UserId')">Remove</button>
                 </div>
            </td>
        </tr>
}
    </tbody>
</table>


