@model FanEase.UI.Models.Campaignvm
@inject IHttpContextAccessor HttpContextAccessor;
@{
    ViewData["Title"] = "AddCampaign";
    Layout = "AdminLayout";

    string UserId = HttpContextAccessor.HttpContext.Session.GetString("UserId");
    int? VideoId = HttpContextAccessor.HttpContext.Session.GetInt32("videoId");
}
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Link Of CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/assets/css/animate.min.css">
    <link rel="stylesheet" href="~/assets/css/remixicon.css">
    <link rel="stylesheet" href="~/assets/css/boxicons.min.css">
    <link rel="stylesheet" href="~/assets/css/iconsax.css">
    <link rel="stylesheet" href="~/assets/css/metismenu.min.css">
    <link rel="stylesheet" href="~/assets/css/simplebar.min.css">

    <link rel="stylesheet" href="~/assets/css/sweetalert2.min.css">
    <link rel="stylesheet" href="~/assets/css/jbox.all.min.css">
    <link rel="stylesheet" href="~/assets/css/editor.css">
    <link rel="stylesheet" href="~/assets/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/assets/css/loaders.css">
    <link rel="stylesheet" href="~/assets/css/header.css">
    <link rel="stylesheet" href="~/assets/css/sidebar-menu.css">
    <link rel="stylesheet" href="~/assets/css/footer.css">
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="stylesheet" href="~/assets/css/responsive.css">
    <link rel="stylesheet" href="~/assets/css/Campaign.css" />

</head>


<title>FanEase -Campaign Details</title>
<body>
    <div class="profile-area">
        <div class="container-fluid">
            <div class="row">
                <div class="edit-profile-content card-box-style col-lg-12">
                    <div class="d-flex justify-content-between mb-3">
                        <h1>Campaign Details</h1>
                        <!-- Two buttons at the opposite side -->

                    </div>
                    <ul class="nav nav-tabs">
                        <!-- Create New Campaign Tab -->
                        <li class="nav-item">
                            <a class="nav-link active" asp-action="AddCampaignss" asp-controller="Campaign" data-bs-toggle="tab">Create New Campaign</a>
                        </li>

                        <!-- Select Existing Campaign Tab -->
                        <li class="nav-item">
                            <a class="nav-link" asp-action="CampaignListScreenByUserId" asp-controller="Campaign" tab">Select Existing Campaign</a>
                        </li>
                    </ul>
                    <div class="d-flex gap-2 py-3">
                        <div class="col-md-6 col-sm-12">
                            <form asp-action="AddCampaign" asp-controller="Campaign" method="post" id="myForm">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                <div class="row hidden">
                                    <div class="col-md-6 sol-sm-12">
                                        <div hidden>

                                            <input asp-for="userId" class="form-control" id="end1" value=@UserId />
                                        </div>
                                    </div>
                                </div>
                                <div class="d-flex flex-column">
                                    <div class="d-flex">
                                        <div class="form-group w-100">
                                            <!--<label asp-for="name" class="control-label"></label>-->
                                            <span>Campaign Name</span>
                                            <span class="text-danger">*</span>
                                            <div class="input-group">
                                                <textarea asp-for="name" class="form-control" id="end1" placeholder="Enter CampaignName"></textarea>
                                                <span asp-validation-for="name" class="text-danger"></span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex gap-2">
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <span>Start Date</span>
                                                <span class="text-danger">*</span>
                                                <input asp-for="startDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")" />
                                                <span asp-validation-for="startDate" class="text-danger"></span>
                                            </div>
                                        </div>
                                        <div class="col-md-6 col-sm-12">
                                            <div class="form-group">
                                                <span>End Date</span>
                                                <span class="text-danger">*</span>
                                                <input asp-for="endDate" class="form-control" min="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm")                />
                                                <span asp-validation-for="endDate" class="text-danger"></span>

                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <input onclick="myCancelFunction()" type="button" value="Cancel" class="btn btn-danger" id="btnReset" />
                                        &nbsp;
                                        <input type="submit" value="Save" class="btn btn-secondary float-right" />
                                        &nbsp;
                                        @if (VideoId != null)
                                        {
                                            <input type="submit" asp-action="AddCampaignProceed" asp-controller="Campaign" value="Proceed" class="btn btn-primary float-right" />
                                        }
                                    </div>
                                </div>

                            </form>

                        </div>
                        <div class="d-flex justify-content-end col-md-6 sol-sm-12">
                            <div>
                                <a id="btnFetchData" class="btn btn-primary mx-3">
                                    View Existing Advertisement
                                </a>
                                <a asp-controller="Advertisement" asp-action="AddAdvertisement" class="btn btn-success mx-3">
                                    Add Advertisement
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="d-flex">
                        <div id="data-container" style="display: none;" class="mt-3 w-100" >
                            <table id="advertisement-table" class="table table-striped table-bordered">
                                <thead class="table">
                                    <tr>
                                        <th>Title</th>
                                        <th>Content Type</th>
                                        <th>End Date</th>
                                        <th>Ad Clicks</th>
                                        <th>Views</th>
                                        <th>Active Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- Table body will be dynamically populated with data -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="go-top">
            <i class="ri-arrow-up-s-fill"></i>
            <i class="ri-arrow-up-s-fill"></i>
        </div>

        @section Scripts {
            @{
                await Html.RenderPartialAsync("_ValidationScriptsPartial");
            }
        }
        <!-- JavaScript files -->
        <script src="~/assets/js/jquery.min.js"></script>

        <script src="~/assets/js/owl.carousel.min.js"></script>
        <script src="~/assets/js/metismenu.min.js"></script>
        <script src="~/assets/js/simplebar.min.js"></script>
        <script src="~/assets/js/geticons.js"></script>
        <script src="~/assets/js/sweetalert2.all.min.js"></script>

        <script src="~/assets/js/editor.js"></script>
        <script src="~/assets/js/form-validator.min.js"></script>
        <script src="~/assets/js/contact-form-script.js"></script>
        <script src="~/assets/js/ajaxchimp.min.js"></script>
        <script src="~/assets/js/custom.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <!-- JavaScript function to reset form fields -->
        <script>
            function myCancelFunction() {
                var result = confirm("Are you sure you want to cancel the process?");
                if (result) {
                    document.getElementById("btnReset").onclick = document.getElementById("myForm").reset();
                } else {
                    alert("You select No!");
                }
            }

        </script>
        <script>
            // Event handler for button click
            $('#btnFetchData').click(function () {
                debugger;
                // AJAX call to fetch the data
                $.ajax({
                    url: '/AdvertisementListScreenByUserId', // URL to your action method
                    type: 'GET',
                    dataType: 'json',
                    success: function (data) {
                        // Data received successfully
                        console.log(data);
                        displayDataInTable(data);
                    },
                    error: function (xhr, status, error) {
                        // Handle the error if any
                        console.error(error);
                    }
                });
            });

            // Function to display the data in the table
            function displayDataInTable(data) {
                var table = $("#advertisement-table");
                var tableBody = table.find('tbody');
                console.log("fount tbody")
                // Clear existing table rows
                tableBody.empty();

                // Loop through the data and create rows for the table
                $.each(data, function (index, item) {
                    var row = $("<tr>");

                    // Create table cells with data for each item
                    var titleCell = $("<td>").text(item.advertisementTitle);
                    var contentTypeCell = $("<td>").text(item.contentType);
                    var endDateCell = $("<td>").text(item.endDate);
                    var adClicksCell = $("<td>").text(item.adClicks);
                    var viewsCell = $("<td>").text(item.views);
                    var isActiveCell = $("<td>").text(item.isActive ? "Active" : "Inactive");
                    debugger;
                    // Append cells to the row
                    row.append(titleCell, contentTypeCell, endDateCell, adClicksCell, viewsCell, isActiveCell);

                    // Append the row to the table body
                    tableBody.append(row);
                });

                // Show the container (table) after data is loaded
                $("#data-container").show();
            }
        </script>
</body>
